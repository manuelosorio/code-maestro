FROM node:21.6.1-slim
ENV PNPM_HOME="/pnpm"
ENV PATH="$PNPM_HOME:$PATH"
RUN corepack enable
ARG NODE_ENV
ARG DATABASE_URL
ARG SESSION_SECRET
ARG SESSION_EXPIRY_DAYS
ARG SESSION_COOKIE_NAME
ENV NODE_ENV $NODE_ENV
ENV DATABASE_URL $DATABASE_URL
ENV SESSION_SECRET $SESSION_SECRET
ENV SESSION_EXPIRY_DAYS $SESSION_EXPIRY_DAYS
ENV SESSION_COOKIE_NAME $SESSION_COOKIE_NAME

ENV HOST=0.0.0.0
ENV PORT=4100

WORKDIR /app

EXPOSE 4100
EXPOSE 4101

RUN addgroup --system main-app &&  \
    adduser --system --ingroup main-app main-app

COPY . .
RUN chown -R main-app:main-app .
RUN pnpm add -g nx@17.2.8 @analogjs/platform@0.2.30 @nx-tools/nx-prisma@5.2.0 vite@5.0.12
RUN pnpm install

RUN nx run main-app:build:production

CMD ["node", "dist/main-app/analog/server/index.mjs"]
